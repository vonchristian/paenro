<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title"> Product Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @product do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :unit %>
          <%= f.input :category_id, collection: Category.all.map{ |a| [a.name, a.id] }, prompt: "Choose category" %>
          <%= f.submit 'Create Product', class: "btn btn-primary btn-flat pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
