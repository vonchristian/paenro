<%= simple_form_for @product do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :unit %>
  <%= f.input :category_id, collection: Category.all.map{ |a| [a.name, a.id] } %>
  <%= f.submit 'Create Product', class: "btn btn-primary btn-flat" %>
<% end %>
