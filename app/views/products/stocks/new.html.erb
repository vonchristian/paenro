<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title"> Stock Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for [@product, @stock], url: :product_stocks do |f| %>
          <%= f.error_notification %>
          <%= f.input :quantity, input_html: { id: 'stock_quantity', oninput: "calculateTotalCostOfStock()" } %>
          <%= f.input :unit_cost, input_html: { id: 'stock_unit_cost', oninput: "calculateTotalCostOfStock()" } %>
          <%= f.input :total_cost, readonly: true, input_html: { id: 'stock_total_cost' } %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
          <div class="box-footer">
            <%= f.submit "Save Stock", data: { disable_with: "Saving Stock...", class: "btn btn-flat btn-primary pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
