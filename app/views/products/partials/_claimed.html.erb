<div class="tab-pane" id='claimed'>

  <div class="table table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th> Date </th>
          <th> Quantity </th>
          <th> Client </th>
        </tr>
      </thead>
      <% @product.line_items.each do |line_item| %>
        <tr>
          <td><%= line_item.date.strftime('%B %e, %Y') if line_item.date %></td>
          <td><%= line_item.quantity %></td>
          <td><%= line_item.client_full_name %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
