<div class="tab-pane active" id='stocks'>
  <div class="table table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th> Date </th>
          <th> Quantity </th>
        </tr>
      </thead>
      <tbody>
        <% @product.stocks.each do |stock| %>
          <tr>
            <td><%= stock.date.strftime('%B %e, %Y') %></td>
            <td><%= stock.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
