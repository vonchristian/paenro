<%= simple_form_for @client do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name %>
  <%= f.input :middle_name %>
  <%= f.input :last_name %>
  <%= f.input :contact_number %>
  <%= f.input :sex, collection: Client.sexes.keys.to_a.map{ |a| [a.titleize, a] }, as: :radio_buttons %>
  <%= f.submit "Save Client", class: "btn btn-primary" %>
<% end %>
