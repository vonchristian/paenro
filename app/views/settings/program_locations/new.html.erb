<%= simple_form_for [@program, @location], url: :settings_program_program_locations do |f| %>
  <%= f.error_notification %>
  <%= f.input :barangay_id, collection: Addresses::Barangay.all.map{|a| [a.name.titleize, a.id] } %>
  <%= f.input :target_area, label: "Target Area (in h.a.)" %>
  <%= f.input :beneficiary_count, label: "Number of Beneficiaries" %>
  <%= f.submit "Save Location", class: "btn btn-primary", data: { disable_with: "Saving Location..." } %>
<% end %>
