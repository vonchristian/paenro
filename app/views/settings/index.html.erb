<%= link_to 'New User', new_settings_user_path, class: "btn btn-primary btn-flat" %>
<%= link_to 'New Municipality', new_settings_municipality_path, class: "btn btn-primary btn-danger btn-flat" %>
<%= link_to 'New Category', new_settings_category_path, class: "btn btn-primary btn-flat" %>
<%= link_to 'New Requirement', new_settings_requirement_path, class: "btn btn-danger btn-flat" %>
<%= link_to 'New Program', new_settings_program_path, class: "btn btn-primary btn-flat" %>
<%= link_to 'New Crop', new_settings_crop_path, class: "btn btn-primary btn-flat" %>

<% @municipalities.each do |municipality| %>
  <%=link_to municipality.name, municipality_path(municipality) %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <div class="box box-danger">
      <div class="box-header with-border">
        <h3 class="box-title"> Program Settings </h3>
      </div>
      <div class="box-body">
        <% Program.all.each do |program| %>
        <h4><%= program.name %></h4>
          <% program.program_locations.each do |program_location| %>
            <div class="row">
              <div class="col-md-4">
                &nbsp; &nbsp; &nbsp; <%= program_location.name %>
              </div>
              <div class="col-md-3">
                <span class="pull-right"><%= number_to_currency program_location.target_area, unit: "" %> Hectares </span>
              </div>
              <div class="col-md-3">
                <span class="pull-right"><%= number_to_currency program_location.beneficiary_count, unit: "" %> beneficiaries </span>
              </div>
              <div class="col-md-2">
                <%= link_to 'Update', edit_settings_program_location_path(program_location)  %>
              </div>
            </div>
            <br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
